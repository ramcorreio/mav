<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<import resource="classpath:mav-service-context.xml" />

	<!-- The IoHandler implementation -->
	<bean id="trapHandler" class="com.stefanini.mav.message.MessageIoHandler " />

	<bean id="textCodecFilter" class="org.apache.mina.filter.codec.ProtocolCodecFilter">
		<constructor-arg>
			<bean
				class="org.apache.mina.filter.codec.textline.TextLineCodecFactory.TextLineCodecFactory" />
		</constructor-arg>
	</bean>

	<bean id="loggingFilter" class="org.apache.mina.filter.logging.LoggingFilter" />

	<!-- The filter chain. -->
	<bean id="filterChainBuilder" class="org.apache.mina.core.filterchain.DefaultIoFilterChainBuilder">
		<property name="filters">
			<map>
				<entry key="loggingFilter" value-ref="loggingFilter" />
				<entry key="codecFilter" value-ref="textCodecFilter" />
			</map>
		</property>
	</bean>

	<bean class="org.springframework.beans.factory.config.CustomEditorConfigurer">
		<property name="customEditors">
			<map>
				<entry key="java.net.SocketAddress">
					<bean class="org.apache.mina.integration.beans.InetSocketAddressEditor" />
				</entry>
			</map>
		</property>
	</bean>

	<!-- The IoAcceptor which binds to port 161 -->
	<bean id="ioAcceptor" class="com.stefanini.mav.startup.MessageServer" init-method="start" destroy-method="stop">
		<property name="defaultLocalAddress" value="8889" />
		<property name="handler" ref="trapHandler" />
		<property name="filterChainBuilder" ref="filterChainBuilder" />
	</bean>

</beans>