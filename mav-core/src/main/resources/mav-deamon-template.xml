<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- The IoAcceptor which binds to port 8889 -->
	<bean id="ioAcceptor" class="com.stefanini.mav.tcp.MensagemDeamon" init-method="start" destroy-method="stop" abstract="true">
		<property name="port" value="inputPort" />
		<property name="handler" ref="trapHandler" />
		<property name="inputCodec" ref="inputCodec" />
	</bean>

</beans>